{
  "compilerOptions": {
     "jsx": "react",
     "composite": true,
     "module": "commonjs",
     "moduleResolution": "node",
     "sourceMap": true,
     "strict": true,
     "pretty": true,
     "target": "es6",
     "outDir": "./dist/npm",
     "declaration": true,
     "declarationMap": true,
     "strictNullChecks": true,
     "noImplicitAny": false,
     "noUnusedLocals": true,
     "removeComments": true,
     "preserveConstEnums": false,
     "esModuleInterop": true,
     "suppressImplicitAnyIndexErrors": false,
     "resolveJsonModule": true,
     "preserveSymlinks": true,
   },
   "include": [
     "src/**/*.ts",
     "src/**/*.tsx",
     "src/**/*.json"
   ],
   "exclude": [
     "node_modules",
     "**/*.test.tsx",
     "**/*.test.ts",
     "**/*.spec.ts",
     "dist"
   ]
}
